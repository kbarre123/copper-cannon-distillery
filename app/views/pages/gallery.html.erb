<% provide(:title, 'Gallery') %>

</br>
<!-- The Gallery as lightbox dialog, should be a child element of the document body -->
<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
  <div class="slides"></div>
  <h3 class="title"></h3>
  <a class="prev">‹</a>
  <a class="next">›</a>
  <a class="close">×</a>
  <a class="play-pause"></a>
  <ol class="indicator"></ol>
</div>

<div class="row">
  <div class="col-md-12">
    <div id="links">
      <div class="row">
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_1_sm_IMG_2451.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_1_lg_IMG_2451.png")) %>
        </div>
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_2_sm_IMG_2458.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_2_lg_IMG_2458.png")) %>
        </div>
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_3_sm_IMG_2455.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_3_lg_IMG_2455.png")) %>
        </div>
      </div><!-- /row -->
      <div class="row">
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_4_sm_IMG_2456.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_4_lg_IMG_2456.png")) %>
        </div>
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_5_sm_IMG_2729.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_5_lg_IMG_2729.png")) %>
        </div>
        <div class="col-md-4 gallery_img">
          <%= link_to(image_tag("gallery/gallery_6_sm_IMG_0421.png", :alt => "R&D still", :title => "R&D still", :class=>"img-rounded"),
            image_path("gallery/gallery_6_lg_IMG_0421.png")) %>
        </div>
      </div><!-- /row -->
      <script>
        document.getElementById('links').onclick = function (event) {
            event = event || window.event;
            var target = event.target || event.srcElement,
                link = target.src ? target.parentNode : target,
                options = {index: link, event: event},
                links = this.getElementsByTagName('a');
            blueimp.Gallery(links, options);
        };
      </script>
    </div><!-- /links -->
  </div><!-- /column 12-->
</div><!-- /row -->

